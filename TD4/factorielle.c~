#include<stdio.h>


int fac(int a){
	int resultat=1;	
	for(int i=1;i<=a;i++){
				resultat=resultat*i;
		}	
		return resultat;
	}
	
	
	void main(){
		//arranger
		int a;
		int re;
		printf("Donner la valeur de a :");
		scanf("%i",&a);
		//agir
		re=fac(a);
		//auditer
		printf("Le factorielle de a est: %i",a);
		}